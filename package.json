{
  "name": "chillist-be",
  "version": "1.15.0",
  "description": "Chillist Backend API - Trip planning with shared checklists",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src tests scripts",
    "lint:fix": "eslint src tests scripts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "test": "npm run typecheck & npm run lint & wait && vitest",
    "test:run": "npm run typecheck & npm run lint & wait && vitest run",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "vitest run tests/e2e",
    "prepare": "husky",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "db:migrate:prod": "DATABASE_URL=$(railway run printenv DATABASE_PUBLIC_URL) npm run db:migrate",
    "db:seed": "tsx src/db/seed.ts",
    "db:seed:prod": "DATABASE_URL=$(railway run printenv DATABASE_PUBLIC_URL) npm run db:seed",
    "dev:local": "set -a && . ./.env.local && set +a && docker compose up -d && npm run db:migrate && npm run db:seed && npm run dev",
    "openapi:generate": "tsx scripts/generate-openapi.ts",
    "openapi:validate": "tsx scripts/generate-openapi.ts --validate"
  },
  "dependencies": {
    "@fastify/cors": "11.0.0",
    "@fastify/helmet": "13.0.2",
    "@fastify/rate-limit": "10.3.0",
    "@fastify/swagger": "9.4.2",
    "@fastify/swagger-ui": "5.2.1",
    "drizzle-orm": "0.45.1",
    "fastify": "5.2.1",
    "fastify-plugin": "5.1.0",
    "fastify-type-provider-zod": "4.0.2",
    "jose": "6.1.3",
    "postgres": "3.4.8",
    "zod": "3.24.1"
  },
  "devDependencies": {
    "@eslint/js": "9.18.0",
    "@testcontainers/postgresql": "11.11.0",
    "@types/node": "22.10.7",
    "drizzle-kit": "0.31.8",
    "eslint": "9.18.0",
    "eslint-config-prettier": "10.0.1",
    "eslint-plugin-prettier": "5.2.3",
    "husky": "9.1.7",
    "lint-staged": "15.4.0",
    "pino-pretty": "13.0.0",
    "prettier": "3.4.2",
    "testcontainers": "11.11.0",
    "tsx": "4.19.2",
    "typescript": "5.7.3",
    "typescript-eslint": "8.21.0",
    "vitest": "2.1.8"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
